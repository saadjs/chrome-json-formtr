{
    "manifest_version": 3,
    "name": "JSON Formtr",
    "description": "Automatically formats raw JSON responses.",
    "version": "0.1.0",
    "minimum_chrome_version": "114",
    "permissions": ["storage", "contextMenus"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "JSON Formtr Settings"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"],
            "run_at": "document_end"
        }
    ],
    "commands": {
        "toggle-raw-formatted": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "Toggle raw/formatted JSON view"
        }
    },
    "options_page": "options.html"
}
