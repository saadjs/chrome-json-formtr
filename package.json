{
    "name": "chrome-json-formtr",
    "version": "3.1.1",
    "type": "module",
    "description": "Simple extension to format JSON responses in Chrome",
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch",
        "lint": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write .",
        "typecheck": "tsc --noEmit",
        "build:zip": "pnpm run build && cd dist && zip -r ../json-formtr.zip ."
    },
    "keywords": [
        "typescript",
        "chrome-extension",
        "json",
        "formatter"
    ],
    "author": "Saad Bash",
    "license": "MIT",
    "packageManager": "pnpm@10.14.0",
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/chrome": "^0.1.4",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.41.0",
        "vite": "^7.1.3"
    }
}
